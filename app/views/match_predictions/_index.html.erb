<table id="MatchPrediction-table" class="table table-sm table-responsive-lg table-striped" style="font-size:0.8rem">
  <thead class="bg-pickem-1 text-white">
    <tr>
      <th>User</th>
      <th>Tournament</th>
      <th>Match</th>
      <th>A1</th>
      <th>A2</th>
      <th>A3</th>
      <th>A4</th>
      <th>A5</th>
      <th>Scores</th>
    </tr>
  </thead>

  <tbody>
    <% @data.each do |mp| %>
      <tr>
        <td><%= mp.user.username %></td>
        <td><%= mp.match.tournament.title %></td>
        <td><%= mp.match.bracket.code %></td>
        <td class="<%= mp.checkq1 %>"><%= mp.answer_1 %></td>
        <td class="<%= mp.checkq2 %>"><%= mp.answer_2 %></td>
        <td class="<%= mp.checkq3 %>"><%= mp.answer_3 %></td>
        <td class="<%= mp.checkq4 %>"><%= mp.answer_4 %></td>
        <td class="<%= mp.checkq5 %>"><%= mp.answer_5 %></td>
        <td><%= mp.total_scores %></td>
      </tr>
    <% end %>
  </tbody>
</table>