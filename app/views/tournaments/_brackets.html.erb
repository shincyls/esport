<% @tournaments.each do |t| %>
<div class="col-md-12">
    <div class="jumbotron mx-auto">
        <div class="row justify-content-center">
            <%= image_tag(t.banner, style: "width:70%;height:70%") %>
            <h6 class="text-white d-block text-uppercase mx-auto shadow mt-2 mb-2">
                Select Your Game and Predict Your Result
            </h6>
        </div>

        <h6 class="text-white text-center shadow mt-2 mb-2">
            Prediction will be prohibited 30min before the match start.
        </h6>

        <% @matches = t.matches.order("bracket_id asc") %>
        <div class="tournament-section">
            <div class="tournament-container">

                <div class="tournament-brackets">
                    <ul class="bracket bracket-1">
                        <% @matches[0..7].each do |m| %>
                        <li class="team-item <%=m.predicted(current_user)%>" id="<%=m.bracket.code%>">
                            <div class="col-12 mx-auto">
                                <span class="text-small"><%=m.match_start.strftime("%m/%d/%Y %I:%M%p") if m.match_start%></span>
                            </div>
                            <a data-remote="true" href="<%=m.predicted_route(current_user)%>">
                                <div class="row">
                                    <div class="col-2 mx-auto"><%= image_tag("icons/teams/t#{m.team_home.id}.png", class: "", style: "height:1.4rem") %></div>
                                    <div class="col-8 text-team">
                                        <%=m.team_home.name%>
                                    </div>
                                    <div class="col-2 text-team">
                                        <span><%=m.team_home_won%></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2 mx-auto"><%= image_tag("icons/teams/t#{m.team_away.id}.png", class: "", style: "height:1.4rem") %></div>
                                    <div class="col-8 text-team">
                                        <%=m.team_away.name%>
                                    </div>
                                    <div class="col-2 text-team">
                                        <span><%=m.team_away_won%></span>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <% end %>
                    </ul>

                    <ul class="bracket bracket-2">
                        <% @matches[8..11].each do |m| %>
