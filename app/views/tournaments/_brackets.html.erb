<% @tournaments.each do |t| %>
<div>
    <div class="row justify-content-center">
        <%= image_tag("brand/cqm.jpg", style: "width:70%;height:70%") %>
        <h6 class="text-white text-uppercase mx-auto shadow mt-2 mb-2">Select Your Game and Predict Your Result</h6>
    </div>

    <% @matches = t.matches.order("bracket_id asc") %>
    <div class="tournament-section">
        <div class="tournament-container">
            <div class="tournament-headers">
            </div>

            <div class="tournament-brackets">

                <ul class="bracket bracket-1">
                    <% @matches[0..7].each do |m| %>
                    <li class="team-item" id="<%=m.bracket.code%>">
                        <%= link_to new_match_prediction_path(id: m.id), remote: true do %>
                            <div class="row">
                                <div class="col-2 mx-auto"><%= image_tag("icons/teams/#{m.team_home.id}.png", class: "", style: "height:1.2rem") %></div>
                                <div class="col-9">
                                    <%=m.team_home.name%>
                                    <span class="float-right"><%=m.team_home_won%></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2 mx-auto"><%= image_tag("icons/teams/#{m.team_away.id}.png", class: "", style: "height:1.2rem") %></div>
                                <div class="col-9">
                                    <%=m.team_away.name%>
                                    <span class="float-right"><%=m.team_away_won%></span>
                                </div>
                            </div>
                        <% end %>
                    </li>
                    <% end %>
                </ul>

                <ul class="bracket bracket-2">
                    <% @matches[8..11].each do |m| %>
                    <li class="team-item" id="<%=m.bracket.code%>">
                        <%= link_to new_match_prediction_path(id: m.id), method: "get", remote: true do %>
                            <div class="row">
                                <div class="col"><%=m.team_home.name%><span class="float-right"><%=m.team_home_won%></span></div>
                            </div>
                            <div class="row">
                                <div class="col"><%=m.team_away.name%><span class="float-right"><%=m.team_away_won%></span></div>
                            </div>
                        <% end %>
                    </li>
                    <% end %>
                </ul>

                <ul class="bracket bracket-3">
                    <% @matches[12..13].each do |m| %>
                    <li class="team-item" id="<%=m.bracket.code%>">
                        <%= link_to new_match_prediction_path(id: m.id), method: "get", remote: true do %>
                            <div class="row">
                                <div class="col"><%=m.team_home.name%><span class="float-right"><%=m.team_home_won%></span></div>
                            </div>
                            <div class="row">
                                <div class="col"><%=m.team_away.name%><span class="float-right"><%=m.team_away_won%></span></div>
                            </div>
                        <% end %>
                    </li>
                    <% end %>
                </ul>

                <ul class="bracket bracket-4">
                    <% final = @matches[15] %>
                    <li class="team-item" id="<%=final.bracket.code%>">
                        <%= link_to new_match_prediction_path(id: final.id), method: "get", remote: true do %>
                            <div class="row">
                                <div class="col"><%=final.team_home.name%><span class="float-right"><%=final.team_home_won%></span></div>
                            </div>
                            <div class="row">
                                <div class="col"><%=final.team_away.name%><span class="float-right"><%=final.team_away_won%></span></div>
                            </div>
                        <% end %>
                    </li>
                </ul>

            </div>
        </div>
    </div>

    <p class="text-white">Terms and Conditions</p>

</div>
<% end %>