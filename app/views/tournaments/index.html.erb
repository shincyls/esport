<p id="notice"><%= notice %></p>

<h1>Tournaments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Prize 1</th>
      <th>Info 1</th>
      <th>Prize 2</th>
      <th>Info 2</th>
      <th>Prize 3</th>
      <th>Info 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.title %></td>
        <td><%= tournament.description %></td>
        <td><%= tournament.start_date %></td>
        <td><%= tournament.end_date %></td>
        <td><%= tournament.prize_1 %></td>
        <td><%= tournament.info_1 %></td>
        <td><%= tournament.prize_2 %></td>
        <td><%= tournament.info_2 %></td>
        <td><%= tournament.prize_3 %></td>
        <td><%= tournament.info_3 %></td>
        <td><%= link_to 'Show', tournament %></td>
        <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
        <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

