<%= form_with(model: tournament, id: "tournament-form") do |form| %>
  <div class="field">
    <div>
      <%= image_tag(tournament.banner, style: "width:50%;height:50%") if tournament.banner.attached? %>
    </div>
    <p>Upload Tournament Banner</p>
    <%= form.file_field :banner %>
  </div>

  <div class="field">
    <div>
      <%= image_tag(tournament.logo, height: 16) if tournament.logo.attached? %>
    </div>
    <p>Upload Tournament Logo</p>
    <%= form.file_field :logo %>
  </div>

  <div class="form-group">
    <label>Team Name</label>
    <%= form.text_field :title, placeholder: "Tournament Title", class: "form-control form-control-sm mb-1" %>
  </div>

  <div class="form-group">
    <label>Team Description</label>
    <%= form.text_field :description, placeholder: "Description", class: "form-control form-control-sm mb-1" %>
  </div>

  <div class="form-group">
    <label for="tournament-start">Start</label>
    <div class="d-block">
      <%= form.date_select :end_date, placeholder: "Tournament Start", class: "form-control form-control-sm mb-1", for: "tournament-start" %>
    </div>
  </div>

 <div class="form-group">
    <label for="tournament-end">End</label>
    <div class="d-block">
      <%= form.date_select :start_date, placeholder: "Tournament End", class: "form-control form-control-sm mb-1", for: "tournament-end" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-4">
      <label>Prize 1</label>
      <%= form.text_field :prize_1, placeholder: "Prize 1", class: "form-control form-control-sm mb-1" %>
    </div>
    <div class="col-8">
      <label>Detail</label>
        <%= form.text_field :info_1, placeholder: "Detail for Prize 1", class: "form-control form-control-sm mb-1" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-4">
      <label>Prize 2</label>
      <%= form.text_field :prize_2, placeholder: "Prize 2", class: "form-control form-control-sm mb-1" %>
    </div>
    <div class="col-8">
      <label>Detail</label>
      <%= form.text_field :info_2, placeholder: "Detail for Prize 2", class: "form-control form-control-sm mb-1" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-4">
      <label>Prize 3</label>
      <%= form.text_field :prize_3, placeholder: "Prize 3", class: "form-control form-control-sm mb-1" %>
    </div>
    <div class="col-8">
      <label>Detail</label>
      <%= form.text_field :info_3, placeholder: "Detail for Prize 3", class: "form-control form-control-sm mb-1" %>
    </div>
  </div>

<% end %>

