<%= link_to 'New Match', new_match_path %>
<table id="data-table" class="table table-sm table-responsive-lg" style="font-size:0.7rem">
  <thead class="bg-success text-white">
    <tr>
      <th>Description</th>
      <th>Team home</th>
      <th>Team away</th>
      <th>Match start</th>
      <th>Match end</th>
      <th>Question 1</th>
      <th>Question 2</th>
      <th>Question 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.description %></td>
        <td><%= match.team_home_id %></td>
        <td><%= match.team_away_id %></td>
        <td><%= match.match_start %></td>
        <td><%= match.match_end %></td>
        <td><%= match.question_1 %></td>
        <td><%= match.question_2 %></td>
        <td><%= match.question_3 %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Delete', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
