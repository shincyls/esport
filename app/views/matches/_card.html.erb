<% @matches.each do |m| %>
    <div class="col-lg-4 mb-3">
        <div class="card shadow border-0">
            <div class="card-body py-5">
                <h6 class="text-primary text-uppercase"><%= m.description %></h6>
                <p class="description mt-3">Team <%= m.team_home_id %> vs Team <%= m.team_away_id %></p>
                <span class="badge badge-pill badge-primary"><%= m.match_start %></span>
                <a href="#" class="btn btn-primary mt-4">Predict</a>
            </div>
        </div>
    </div>
<% end %>





