<%= form_with(model: match, id: "match-form") do |form| %>

  <% if @form == "2" %>
  <div class="form-group row">
    <div class="col-6">
      <label for="select-tournament">Tournament</label>
      <div class="input-group input-group-sm">
        <%= form.select(:tournament_id, Tournament.all.collect {|t| [ t.title, t.id ] }, {include_blank: "Select Tournament"}, class: "custom-select custom-select-sm", id: "select-tournament") %>
      </div>
    </div>
    <div class="col-6">
      <label for="select-bracket">Bracket</label>
      <div class="input-group input-group-sm">
        <%= form.select(:bracket_id, Bracket.all.collect {|b| [ b.title, b.id ] }, {include_blank: "Select Bracket"}, class: "custom-select custom-select-sm", id: "select-bracket") %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-4">
      <label for="select-team_home">Team 1</label>
      <div class="input-group input-group-sm">
        <%= form.select(:team_home_id, Team.all.collect {|h| [ h.name, h.id ] }, {include_blank: "Select Team"}, class: "custom-select custom-select-sm", id: "select-team_home") %>
      </div>
    </div>
    <div class="col-2">
      <label for="select-tournament">Won</label>
      <div class="input-group input-group-sm">
        <%= form.text_field :team_home_won, class: "form-control form-control-sm" %>
      </div>
    </div>
    <div class="col-4">
      <label for="select-team_away">Team 2</label>
      <div class="input-group input-group-sm">
        <%= form.select(:team_away_id, Team.all.collect {|a| [ a.name, a.id ] }, {include_blank: "Select Team"}, class: "custom-select custom-select-sm", id: "select-team_away") %>
      </div>
    </div>
    <div class="col-2">
      <label for="select-tournament">Won</label>
      <div class="input-group input-group-sm">
        <%= form.text_field :team_away_won, class: "form-control form-control-sm" %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12">
      <label for="select-team_won">Select Winner</label>
      <div class="input-group input-group-sm">
        <%= form.select(:team_won_id, Team.all.collect {|w| [ w.name, w.id ] }, {include_blank: "Select Team"}, class: "custom-select custom-select-sm", id: "select-team_won") %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-6">
      <label for="match-start">Start</label>
      <div class="d-block">
        <%= form.datetime_select :match_start, placeholder: "Match Start", class: "form-control form-control-sm mb-1", id: "match-start" %>
      </div>
    </div>
    <div class="col-6">
      <label for="match-end">End</label>
      <div class="d-block">
        <%= form.datetime_select :match_end, placeholder: "Match End", class: "form-control form-control-sm mb-1", id: "match-end" %>
      </div>
    </div>
  </div>

  <% elsif @form == "1" %>

  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Q1</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Q2</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Q3</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-forth-tab" data-toggle="pill" href="#pills-forth" role="tab" aria-controls="pills-forth" aria-selected="false">Q4</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-fifth-tab" data-toggle="pill" href="#pills-fifth" role="tab" aria-controls="pills-fifth" aria-selected="false">Q5</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <div class="form-group">
        <label>First Question</label>
        <%= form.text_field :question_1, placeholder: "Question 1", class: "form-control form-control-sm mb-1" %>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <div class="form-group">
        <label>Second Question</label>
        <%= form.text_field :question_2, placeholder: "Question 3", class: "form-control form-control-sm mb-1" %>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
      <div class="form-group">
        <label>Third Question</label>
        <%= form.text_field :question_3, placeholder: "Question 3", class: "form-control form-control-sm mb-1" %>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-forth" role="tabpanel" aria-labelledby="pills-forth-tab">
      <div class="form-group">
        <label>Forth Question</label>
        <%= form.text_field :question_4, placeholder: "Question 4", class: "form-control form-control-sm mb-1" %>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-fifth" role="tabpanel" aria-labelledby="pills-fifth-tab">
      <div class="form-group">
        <label>Fifth Question</label>
        <%= form.text_field :question_5, placeholder: "Question 5", class: "form-control form-control-sm mb-1" %>
      </div>
    </div>
  </div>

  <% end %>

<% end %>