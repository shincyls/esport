<%= form_with(model: match, id: "match-form") do |form| %>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "Game Name", class: "form-control form-control-sm" %>
  </div>

  <div class="form-group">
    <%= form.text_field :description, placeholder: "Description", class: "form-control form-control-sm" %>
  </div>

  <div class="form-group row">
    <div class="col-5 field">
      <%= form.text_field :team_home_id, placeholder: "Team Home", class: "form-control form-control-sm" %>
    </div>
    <div class="col-2 field">
      <span>VS</span>
    </div>
    <div class="col-5 field">
      <%= form.text_field :team_away_id, placeholder: "Team Away", class: "form-control form-control-sm" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.text_field :match_start, placeholder: "Match Start", class: "form-control form-control-sm" %>
  </div>

  <div class="form-group">
    <%= form.text_field :question_1, placeholder: "Question 1", class: "form-control form-control-sm" %>
  </div>

  <div class="form-group">
    <%= form.text_field :question_2, placeholder: "Question 2", class: "form-control form-control-sm" %>
  </div>

  <div class="form-group">
    <%= form.text_field :question_3, placeholder: "Question 3", class: "form-control form-control-sm" %>
  </div>

<% end %>
