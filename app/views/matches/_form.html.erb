<%= form_with(model: match, id: "match-form") do |form| %>

  <div class="form-group row">
    <div class="col-12">
      <label for="select-tournament">Select Tournament</label>
      <div class="input-group input-group-sm">
        <%= form.select(:tournament_id, Tournament.all.collect {|t| [ t.title, t.id ] }, {include_blank: "Select Tournament"}, class: "custom-select", id: "select-tournament") %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-12">
      <label for="select-bracket">Select Bracket</label>
      <div class="input-group input-group-sm">
        <%= form.select(:bracket_id, Bracket.all.collect {|b| [ b.title, b.id ] }, {include_blank: "Select Bracket"}, class: "custom-select", id: "select-bracket") %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-5">
      <label for="select-team_home">Select Team 1</label>
      <div class="input-group input-group-sm">
        <%= form.select(:team_home_id, Team.all.collect {|h| [ h.name, h.id ] }, {include_blank: "Select Team"}, class: "custom-select", id: "select-team_home") %>
      </div>
    </div>
    <div class="col-2 field">
      <span>VS</span>
    </div>
    <div class="col-5">
      <label for="select-team_away">Select Team 2</label>
      <div class="input-group input-group-sm">
        <%= form.select(:team_away_id, Team.all.collect {|a| [ a.name, a.id ] }, {include_blank: "Select Team"}, class: "custom-select", id: "select-team_away") %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="select-team_away">Select Date Time for Match Start</label>
    <%= form.text_field :match_start, placeholder: "Match Start", class: "form-control form-control-sm" %>
  </div>

  <div class="form-group">
    <label for="select-team_away">Question to predict for the Match</label>
    <%= form.text_field :question_1, placeholder: "Question 1", class: "form-control form-control-sm mb-1" %>
    <%= form.text_field :question_2, placeholder: "Question 2", class: "form-control form-control-sm mb-1" %>
    <%= form.text_field :question_3, placeholder: "Question 3", class: "form-control form-control-sm mb-1" %>
  </div>

<% end %>
