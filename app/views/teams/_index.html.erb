<script>

  $(document).ready(function() {
    $('#team-table').DataTable({
      "order": [],
      "search": {
        "caseInsensitive": true
      }
    });
  });

</script>

<table id="team-table" class="table table-sm table-responsive-lg table-striped table-dark" style="font-size:0.8rem">
  <thead class="bg-dark text-white">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Logo</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody class="text-black">
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.description %></td>
        <td><%= team.logo %></td>
        <td><span class="bg-warning rounded p-1 m-1"><%= link_to 'Edit', edit_team_path(team), class: "text-white" %></span></td>
        <td><span class="bg-danger rounded p-1 m-1"><%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-white" %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
