<div class="row">
  <div class="col-md-12">
      <div class="form-group">
          <%= button_to "New Team", new_team_path, remote: true, method: 'get', class: "btn btn-outline-info" %>
      </div>
  </div>
</div>

<table id="Team-table" class="table table-sm table-responsive-lg table-striped" style="font-size:0.8rem">
  <thead class="bg-dark text-white">
    <tr>
      <th>Team</th>
      <th>Logo</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody class="text-black">
    <% @data.each do |team| %>
      <tr>
        <td>
          <span class="btn btn-sm" data-toggle="tooltip" data-placement="right" title="<%= team.description %>">
            <%= team.name %>
          </span>
        </td>
        <td id="team-logo-<%= team.id %>">
          <%= image_tag(team.logo, width: 48) if team.logo.attached? %> 
        </td>
        <td><span class="bg-warning rounded p-1 m-1"><%= link_to 'Edit', edit_team_path(team), remote: true, class: "text-white" %></span></td>
        <td><span class="bg-danger rounded p-1 m-1"><%= link_to 'Delete', team, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "text-white" %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
