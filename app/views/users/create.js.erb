<% if @user.errors.messages[:username].any? %>
    $('#validateUsername').attr("class", "form-group mb-3 has-danger");
    $('#validateUsername .invalid-feedback').html('<%= @user.errors.messages[:username][0] %>');
<% else %>
    $('#validateUsername').attr("class", "form-group mb-3 has-success");
<% end %>

