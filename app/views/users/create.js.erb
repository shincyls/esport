<% if @user.errors.messages[:email].any? %>
    $('#validateEmail').attr("class", "form-group mb-3 has-danger");
    $('#validateEmail .invalid-feedback').html('<%= @user.errors.messages[:email][0] %>');
<% else %>
    $('#validateEmail').attr("class", "form-group mb-3 has-success");
    $('#validateEmail .invalid-feedback').html('');
<% end %>

