<div class="container mt-4 mb-4">
    <div class="row">

        <!-- Section Left -->
        <div class="col-md-12">
            <div class="jumbotron">
                <%= image_tag("brand/klmajor.png", class: "mr-2", style: "width:50%;") %>
                <h1 class="display-4 mt-4">Please Choose a Match and Predict Your Outcome!</h1>
                <hr class="my-4">

                <table id="data-table" class="table table-sm table-responsive-lg table-striped table-dark" style="font-size:0.8rem">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>No<th>
                            <th>Description</th>
                            <th>Team 1 vs Team 2</th>
                            <th>Match Start</th>
                            <th>Predict</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @matches.each do |match| %>
                        <tr>
                            <th><%= match.id %><th>
                            <td><%= match.description %></td>
                            <td>Team <%= match.team_home_id %> VS Team <%= match.team_away_id %></td>
                            <td><%= match.match_start %></td>
                            <td>Click Here</td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>


<script>

loadjs();

function loadjs() {
  $(document).ready(function() {
    $('#data-table').DataTable({
      "order": [],
      "search": {
        "caseInsensitive": true
      }
    });
  });
};

</script>